# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
# Development (SQLite - easiest for local development)
DATABASE_URL=sqlite:///swiftbudget_dev.db

# Development (local PostgreSQL with psycopg3)
# DATABASE_URL=postgresql+psycopg://localhost/swiftbudget_dev

# Production (Supabase - replace with your actual connection string)
# DATABASE_URL=postgresql+psycopg://postgres:password@db.xxx.supabase.co:5432/postgres

# Email Configuration (Gmail SMTP)
# Instructions: https://support.google.com/accounts/answer/185833
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=

# Application Settings
DEBUG=True
TESTING=False

# Session Configuration
SESSION_COOKIE_SECURE=False  # Set to True in production (HTTPS)
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=86400  # 24 hours in seconds

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/swiftbudget.log
